<% user = current_user if user == nil %>
<h2>User info</h2>

<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
  <div class="row">
    <%= link_to edit_user_path(current_user), class: "col-xs-12 btn btn-default" do %>
      <i class="fas fa-wrench"></i>
    <% end %>
  </div>