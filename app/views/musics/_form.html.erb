<% music = Music.new if music.nil?  %>
<%= form_for(music) do |f| %>

  <div class="field row">
    <%= f.label :曲名 %>
    <%= f.text_field :title, class: "col-xs-12 music_title" %>
  </div>

  <div class="field row">
    <%= f.label :感想 %>
    <%= f.text_area :body, class: "col-xs-12 music_body" %>
  </div>

  <div class="actions row">
    <%= f.submit "投稿",class: "btn btn-primary col-xs-12" %>
  </div>

<% end %>