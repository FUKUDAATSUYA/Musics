<tbody>
  <% music_comments.each do |music_comment| %>
    <tr>
      <td>
        <%= link_to (music_comment.user) do %>
          <%= attachment_image_tag(music_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %><br>
          <%= music_comment.user.name %>
        <% end %>
      </td>

      <td>
        <%= music_comment.content %>
      </td>

      <td>
        <% if music_comment.user_id == current_user.id %>
          <%= link_to "Destroy", music_comment_path(music_comment), method: :delete, remote: true, class: "btn-sm btn-danger" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</tbody>