<% user = current_user if user.nil? %>
<table class="table">
		<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

		<tr>
			<th>名前</th>
			<th><%= user.name %></th>
		</tr>

		<tr>
			<th>自己紹介</th>
			<th><%= user.introduction %></th>
		</tr>

		<tr>
			<th>フォロー</th>
				<th><%= link_to user.followings.count, user_followings_path(user) %></th>
		</tr>

		<tr>
			<th>フォロワー</th>
			<th><%= link_to user.followers.count, user_followers_path(user) %></th>
		</tr>

		<tr>
			<th><% if unchecked_notifications.any? %>
    <i class="fa fa-circle" style="color: gold;"></i>
<% end %>
    <%= link_to "通知", notifications_path %></th>
			 <th></th>
		</tr>
</table>

<div class="row">
	<%= render 'relationships/follow_button', user: user %>
</div>

<div class="row">
	<%= link_to 'プロフィールを編集する',edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>