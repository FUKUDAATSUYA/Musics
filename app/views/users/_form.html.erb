<%= form_for(user) do |f| %>

  <div class="field row">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "col-xs-12 name" %>
  </div>

  <div class="field row">
    <%= f.label :image %>
    <%= f.attachment_field :profile_image, class: "col-xs-12 user_image" %>
  </div>

  <div class="field row">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: "col-xs-12 introduction" %>
  </div>


  <div class="actions row">
    <%= f.submit class: "btn btn-primary col-xs-12" %>
  </div>

<% end %>
